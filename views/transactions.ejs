<%- include("./partials/header.ejs") %>

<div style="margin: 5% 40%;">
	<h1>
	All Transactions 
   </h1>

</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
<% transfers.forEach((transfer)=> {%>

  <div class="col">
    <div class="card h-100">
      <div class="card-body" style="text-align: center;">
        <h5 class="card-title">Sender - <%=transfer.sender.name%></h5>
		  <h5 class="card-title">Receiver -<%=transfer.receiver.name%></h5>
		 <p class="card-text">Amount - Rs.<%=transfer.amount%>
		 <br>
		  
		</div>
    </div>
  </div>
  
<%});%>
</div>
 
    <a style="margin: 2% 46%;" href="/" class="btn btn-secondary">Go Back</a>
 
<%- include("./partials/footer.ejs") %>